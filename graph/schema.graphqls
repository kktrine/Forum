type Post {
  id: ID!
  title: String!
  content: String!
  comments: [Comment!]
  commentsLocked: Boolean!
}

type Comment {
  id: ID!
  postId: ID!
  parentId: ID
  content: String!
  replies: [Comment!]
}

type Query {
  posts: [Post!]!
  post(id: ID!): Post
}

type Mutation {
  createPost(title: String!, content: String!, commentsLocked: Boolean): Post!
  createComment(postID: ID!, parentID: ID, content: String!): Comment!
  lockComments(postID: ID!): Post!
}